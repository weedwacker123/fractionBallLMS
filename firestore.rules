rules_version = '2';

// Firestore Security Rules for Fraction Ball LMS
// Primary data storage is in Django/PostgreSQL backend
// Firestore is used for synced data (users, community posts) and FireCMS content

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // User profiles - readable by authenticated users
    // Writes happen via Admin SDK (server-side from Django)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-only writes via Admin SDK
    }

    // Community posts - readable by authenticated users
    // Writes happen via Admin SDK (server-side from Django)
    match /communityPosts/{postId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-only writes via Admin SDK

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow write: if false; // Server-only writes via Admin SDK
      }
    }

    // Content from FireCMS (read-only for authenticated users)
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /resources/{resourceId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /faqs/{faqId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
