rules_version = '2';

// Firebase Storage Security Rules for Fraction Ball LMS
// All content requires authentication as per TRD requirements

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (in bytes)
    function isValidSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // Videos folder - 500MB max as per TRD
    match /videos/{allPaths=**} {
      // Anyone authenticated can read videos
      allow read: if isAuthenticated();
      
      // Only authenticated users can upload videos (max 500MB)
      allow write: if isAuthenticated() 
                   && isValidSize(500)
                   && request.resource.contentType.matches('video/.*');
    }
    
    // Resources folder (PDFs, PowerPoints, Word docs) - 50MB max
    match /resources/{allPaths=**} {
      allow read: if isAuthenticated();
      
      allow write: if isAuthenticated()
                   && isValidSize(50)
                   && (request.resource.contentType == 'application/pdf'
                       || request.resource.contentType.matches('application/vnd.ms-.*')
                       || request.resource.contentType.matches('application/vnd.openxmlformats-.*')
                       || request.resource.contentType == 'application/msword');
    }
    
    // Lesson plans folder - PDFs only, 10MB max
    // Public read: Required for Google Docs Viewer to display PDFs
    // Note: Browsers may send different MIME types for PDFs, so we check multiple
    match /lesson-plans/{allPaths=**} {
      allow read: if true;  // Public read - LMS pages require Django login

      allow write: if isAuthenticated()
                   && isValidSize(10)
                   && (request.resource.contentType == 'application/pdf'
                       || request.resource.contentType == 'application/x-pdf'
                       || request.resource.contentType == 'application/octet-stream');
    }

    // Activity videos folder - direct video uploads for activities
    // Public read: Required for HTML5 video player (doesn't send Firebase auth)
    match /activity-videos/{allPaths=**} {
      allow read: if true;  // Public read - LMS pages require Django login

      allow write: if isAuthenticated()
                   && isValidSize(500)
                   && request.resource.contentType.matches('video/.*');
    }

    // Activity resources folder - teacher/student resources uploaded directly in activities
    // Public read: Required for direct download links
    match /activity-resources/{allPaths=**} {
      allow read: if true;  // Public read - LMS pages require Django login

      allow write: if isAuthenticated()
                   && isValidSize(50)
                   && (request.resource.contentType == 'application/pdf'
                       || request.resource.contentType == 'application/x-pdf'
                       || request.resource.contentType == 'application/octet-stream'
                       || request.resource.contentType.matches('application/vnd.ms-.*')
                       || request.resource.contentType.matches('application/vnd.openxmlformats-.*')
                       || request.resource.contentType == 'application/msword');
    }

    // Thumbnails folder - Images only, 10MB max
    // Public read: Required for image display
    match /thumbnails/{allPaths=**} {
      allow read: if true;  // Public read - LMS pages require Django login

      allow write: if isAuthenticated()
                   && isValidSize(10)
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}




















